<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.serveme.savemyphone"
    android:permission="android.permission.RECEIVE_BOOT_COMPLETED"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <!-- android:theme="@style/AppTheme" > --> 
        
        <service
            android:name=".service.AppsMonitor"
            android:enabled="true" />

        <receiver android:name="com.serveme.savemyphone.receiver.BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
        
        <receiver
            android:name=".view.AdminReciver"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_DEVICE_ADMIN" >
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/my_admin" />

            <intent-filter>
		        <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
		        <action android:name="android.app.action.DEVICE_ADMIN_DISABLED" />
		    </intent-filter>
        </receiver>

        <activity
            android:name=".view.AdminActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".view.UserActivity"
            android:label=""
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="edu.itf.activities.UserActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".view.AdminRequest"
            android:label="Request Device Admin" />
        
         <activity
            android:name=".view.SettingsActivity"
            android:label="Settings" />
         
          <activity
            android:name=".view.UninstallActivity"
            android:label="Uninstall"
            android:theme="@android:style/Theme.Dialog" >
            <intent-filter>
                <action android:name="com.serveme.savemyphone.view.UninstallActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            </activity>
        
        <activity
            android:name="group.pals.android.lib.ui.lockpattern.LockPatternActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:screenOrientation="user"
            android:theme="@style/Alp.Theme.Dark" />
    </application>

</manifest>